<div class="main">
    {{#if error}} 
    <p onclick="myfunction()" id="error">{{error}}</p>    
{{/if}}
        {{#if success}} 
    <p onclick="myfunction()" id="error">{{success}}</p>    
{{/if}}
{{#if alert}} 
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
  <ul>
      {{#each alert}}
            <li>{{this.msg}}</li>
      {{/each}}
  </ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>    
{{/if}}
<div class="products_form">
    <div class="productform_data">
        <form action="/products" method="post" enctype="multipart/form-data">
            <label for="Products">Product Name</label> <br>
            <input type="text" name="name"  value="" placeholder="Product Name"> <br>
            <label for="Price">Price</label> <br>
            <input type="text" name="price" value="" placeholder="Price"> <br>
            {{!-- <input type="file" name="file" id="file"> <br> --}}
            <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" name="myimage" aria-label="Upload">
            <button type="submit">Add to Products</button>
        </form>
    </div>
</div>
<div>    
<h1 class="heading">Products</h1>

<div class="product_container">
    <table>
        <tr>
            <th>Image</th>
            <th>Products Name</th>
            <th>Price</th>
            <th>Delete Product</th>
            <th>Select Quantity</th>
        </tr>
        {{#each products}}
        <tr>
            <td><img src="{{this.myimage}}" alt=""></td>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>
                <form action="/products/delete" method="post">
                    <input type="text" value="{{ this.id }}" hidden name="id">
                    <button type="submit">Delete</button>
                </form>
            </td>
            <td>
                <form action="/orders/quantity" method="post">
                    <input hidden type="text" value="{{ this.name}}" name="product">
                    <input  hidden type="text" value="{{ this.id }}" name="id">
                    <input type="number" name="quantity" id="quantity"><br>
                    <button>Add to orders</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
</div>
</div>

